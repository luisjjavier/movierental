@model IEnumerable<Webapp.Models.Tape>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Listado de peliculas
            <a href="@Url.Action("Create","Tapes")" class="btn btn-primary pull-right"><i class="fa fa-file-movie-o"></i> Nueva cinta</a>
        </h1>

    </div>
    <!-- /.col-lg-12 -->
</div>
<table id="dataTables-example" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Codigo de cinta
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id.ToString().PadLeft(4, '0')</td>
                <td>
                   Pelicula
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    @Scripts.Render("~/bundles/datatables")

    <script>
        $('#dataTables-example').DataTable({
            responsive: true
        });
    </script>
}