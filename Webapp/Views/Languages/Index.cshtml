@model IEnumerable<Webapp.Models.Language>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Listado de idiomas
            <a href="@Url.Action("Create","Languages")" class="btn btn-primary pull-right"><i class="fa fa-user-plus"></i> Nuevo idioma</a>
        </h1>

    </div>
</div>
<table id="dataTables-example" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.Id})
            </td>
        </tr>
    }
    </tbody>
</table>
@section scripts{
    @Scripts.Render("~/bundles/datatables")

    <script>
        $('#dataTables-example').DataTable({
            responsive: true
        });
    </script>
}