@model IEnumerable<Webapp.Models.ActorViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listado de actores
            <a href="@Url.Action("Create","Actors")" class="btn btn-primary pull-right"><i class="fa fa-user-plus"></i> Nuevo actor</a></h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>

<table id="dataTables-example" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <img style="width: 250px; height: auto" src="@item.ImageUrl" alt="no hay foto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {id = item.Id}) |
                @Html.ActionLink("detaller", "Details", new {id = item.Id}) 
            </td>
        </tr>

    }
    </tbody>

</table>

@section scripts{
    @Scripts.Render("~/bundles/datatables")

    <script>
        $('#dataTables-example').DataTable({
            responsive: true
        });
    </script>
}
